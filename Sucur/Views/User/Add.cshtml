@model Sucur.Models.UserViewModel

<h1>Add </h1>

<form method="post" >

    <div class="mt-3">
        <label class="form-label"> Nombre </label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label"> Numero </label>
        <input type="number" class="form-control" asp-for="Phone"/>
    </div>

