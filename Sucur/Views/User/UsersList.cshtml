@{
}

@model List<Sucur.Models.Entities.User>

<table>
    <thead>
        <tr>
            <th> Id </th>
            <th> Name </th>
            <th> Date </th>
            <th> Email </th>
        </tr>
    </thead>
    <tbody>

        @foreach(var user in Model){
            <tr>
                <td>@user.IdUsuario</td>
                <td>@user.Nombre</td>
                <td>@user.Fecha</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.IdUsuario"> Editar </a>
                    <a asp-controller="Users"> Remover </a>
                </td>
            </tr>
        }

    </tbody>
</table>